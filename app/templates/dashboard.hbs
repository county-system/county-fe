                        <h1 class="card-text green">
                            {{this.number}}
                        </h1>
                    </div>
                </div>
            </div>
        </div>
        <div class="card text-center shadow p-2 mb-3 bg-white rounded">
            <div class="card-body">
                <div class="card-title">
                    {{this.number}}
                </div>
                {{ember-chart
                type="bar"
                data=this.data
                width=900
