                        {{ember-chart
                        type=this.type
                        data=this.data
                        options=this.options
                        }}
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col">
                <div id="wave" class="card text-center shadow p-2 mb-3 bg-white rounded">
                    <div class="card-body">
                        <h5 class="card-title ">Total Submitted Reports</h5>
                        <h1 class="card-text green">
                            {{this.number}}
                        </h1>
                    </div>
                </div>
            </div>
