{{page-title "Dash"}}
{{outlet}}
<div>
    <h4 class="mb-4 text-muted">System Navigation </h4>

    <div class="row">
        <div class="col-md-5 col-lg-3 mb-4">
            <div class="card bg-purple text-light shadow border-0 rounded-0">
                <div class="card-body text-center">
                    <h5 class="card-title">Summary data of county projects</h5>
                    <LinkTo @route="kpi">
                        <a href="#" class="btn btn-primary btn-sm">Visit KPI's</a>
                    </LinkTo>
                </div>
            </div>
        </div>
        <div class="col-md-5 col-lg-3 mb-4">
            <div class="card bg-green text-light shadow border-0 rounded-0">
                <div class="card-body text-center">
                    <h5 class="card-title">Maps data positioning</h5>
                    <LinkTo @route="maps">
                        <a href="#" class="btn btn-primary btn-sm">Visit Maps</a>
                    </LinkTo>
                </div>
            </div>
        </div>
        <div class="col-md-5 col-lg-3 mb-4">
            <div class="card bg-blue text-light shadow border-0 rounded-0">
                <div class="card-body text-center">
                    <h5 class="card-title">Check out projects</h5>
                    <LinkTo @route="dashboard" @disabled={{true}}>
                        <a href="#" class="btn btn-primary btn-sm">Visit Projects</a>
                    </LinkTo>
                </div>
            </div>
        </div>
        <div class="col-md-5 col-lg-3 mb-4">
            <div class="card bg-purple text-light shadow border-0 rounded-0">
                <div class="card-body text-center">
                    <h5 class="card-title">County reports update</h5>
                    <LinkTo @route="reports" @disabled={{true}}>
                        <a href="#" class="btn btn-primary btn-sm">Visit M&#38;E</a>
                    </LinkTo>
                </div>
            </div>
        </div>
        <div class="col-md-5 col-lg-3 mb-4">
            <div class="card bg-green text-light shadow border-0 rounded-0">
                <div class="card-body text-center">
                    <h5 class="card-title">County Systems in use</h5>
                    <LinkTo @route="systems">
                        <a href="#" class="btn btn-primary btn-sm">Visit Systems</a>
                    </LinkTo>
                </div>
            </div>
        </div>
    </div>
</div>
