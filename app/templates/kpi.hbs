{{page-title "Kpi"}}
<div class="row">
    <div class="col">
        <div class="wrapper">
            <select {{on "change" this.dropdownValue value="target.value" }} onfocus='this.size=5;'
                onblur='this.size=1;' class="form-select" aria-label="Default select example">
                <option selected>Select data by project</option>
                {{#each dropdown as |dt|}}
                <option value={{dt}}>{{dt}}</option>
                {{/each}}
            </select>
        </div>
    </div>
</div>

<div>
    <h4 class="mb-4 text-muted green">County Totals</h4>
    <div class="row">
        <div class="col-md-3 col-lg-3 mb-4">
            <Common::Card-Config @class="bg-green text-light " @header="Total Amount Allocated" @section="section"
                @value={{fomartcurrency totalWardAmountSpent}} />
        </div>
        <div class="col-md-3 col-lg-3 mb-4">
            <Common::Card-Config @class="bg-green text-light" @header="# of Projects in the County" @section="section"
                @value={{totalProjectsCount}} />
        </div>
    </div>
</div>
<div>
    <h4 class="mb-4 text-muted green">Projects Data: <span class="green">{{this.value}}</span> </h4>
    <div class="row">
        <div class="col-md-3 col-lg-3 mb-4">
            <Common::Card-Config @class="text-dark bg-white" @header="Project Amount" @value={{fomartcurrency
                totalProjectCosts}} />
        </div>
        <div class="col-md-3 col-lg-3 mb-4">
            <Common::Card-Config @class="text-dark bg-white" @header="Complete projects" @value={{complete}} />
        </div>
        <div class="col-md-3 col-lg-3 mb-4">
            <Common::Card-Config @class="text-dark bg-white" @header="Incomplete projects" @value={{incomplete}} />
        </div>
    </div>
</div>
<div>
    <h4 class="mb-4 text-muted green">County Totals</h4>
    <BsTab as |tab|>
        <tab.pane @title="Totals Bar Chart">
            <div class="row">
                <div class="col-md-6 col-lg-6 mb-4">
                    <div class="card mt-4">
                        <div class="card-header bg-transparent">
                            <h3 class="justify-content-md align-items-center">Amount Allocated per ward</h3>
                        </div>
                        <div class="card-body">
                            {{ember-chart
                            type='bar'
                            data=pieData
                            options=options
                            }}
                        </div>
                    </div>
                </div>
                <div class="col-md-6 col-lg-6 mb-4">
                    <div class="card mt-4">
                        <div class="card-header bg-transparent">
                            <h3 class="justify-content-md align-items-center">Amount spent per ward</h3>
                        </div>
                        <div class="card-body">
                            {{ember-chart
                            type=type
                            data=pieData
                            options=options
                            }}
                        </div>
                    </div>
                </div>
            </div>
        </tab.pane>
        <tab.pane @title="More Reports">
            <div class="card mt-4">
                <div class="card-header bg-transparent">
                    <h1 class="justify-content-md align-items-center">Amount spent per ward</h1>
                </div>
                <div class="card-body">
                    {{ember-chart
                    type=type
                    data=pieData
                    options=options
                    }}
                </div>
            </div>
        </tab.pane>
    </BsTab>
</div>