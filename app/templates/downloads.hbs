{{page-title "Downloads"}}
{{outlet}}

<div class="downloads">
    <div class="row">
        <div class="col-md-12 bg-gray p-2 mb-2 mt-2 border-1 d-flex justify-content-between">
            <h4 class="ml-3 mt-3">County CIDP</h4>
            <span>{{svg-jar "pdf"}}{{svg-jar "word"}}{{svg-jar "excel"}}</span>
        </div>
        <div class="col-md-12 bg-gray p-2 mb-2 mt-2 border-1 d-flex justify-content-between">
            <h4 class="ml-3 mt-3">Policies</h4>
            <span>{{svg-jar "pdf"}}{{svg-jar "word"}}{{svg-jar "excel"}}</span>
        </div>
        <div class="col-md-12 bg-gray p-2 mb-2 mt-2 border-1 d-flex justify-content-between">
            <h4 class="ml-3 mt-3">Templates</h4>
            <span>{{svg-jar "pdf"}}{{svg-jar "word"}}{{svg-jar "excel"}}</span>
        </div>
        <div class="col-md-12 bg-gray p-2 mb-2 mt-2 border-1 d-flex justify-content-between">
            <h4 class="ml-3 mt-3">Manuals</h4>
            <span>{{svg-jar "pdf"}}{{svg-jar "word"}}{{svg-jar "excel"}}</span>
        </div>
    </div>
    <div class="row mt-2 shadow">
        <div class="col m-4">
            <h4 class="mb-2">Suggest a document we can upload here</h4>
            <BsForm @formLayout="vertical" @model={{this.model}} @onSubmit={{action "submit" }} as |form|>
                <form.element @controlType="text" @property="name" as |el|>
                    <el.control placeholder={{me.user.name}} readonly="readonly" />
                </form.element>
                <form.element @controlType="email" @property="email" as |el|>
                    <el.control placeholder={{me.user.email}} readonly="readonly" />
                </form.element>
                <form.element @controlType="textarea" @property="textarea" required="true"/>
                <form.submitButton class="bg-green">Submit</form.submitButton>
            </BsForm>
        </div>
    </div>
</div>