{{!-- {{yield}} --}}

<BsNavbar @type="dark" class="fixed-top" @backgroundColor="dark" @collapsed={{true}} as |navbar|>
  <div class="navbar-header">
    {{#link-to "index" class="navbar-brand ml-3" }} {{svg-jar "turkana_logo_main"}}{{/link-to}}
  </div>
  <navbar.content>
  </navbar.content>
  {{#if this.session.isAuthenticated}}
  <div class="d-flex justify-content-end">
    <h4 class="green mr-3 mt-2">{{capital me.user.name}}</h4>
    <Common::Profile-Icon @icon={{svg-jar "account_circle_white" }} @link="login" @class="rounded-pill" />
  </div>
  {{else}}
  <Common::Profile-Icon @icon={{svg-jar "account_circle_white" }} @link="login" @class="rounded-pill" @text="login" />
  {{/if}}
</BsNavbar>