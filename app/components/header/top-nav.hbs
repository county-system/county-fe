{{!-- {{yield}} --}}

<BsNavbar @type="dark" class="fixed-top" @backgroundColor="dark" @collapsed={{true}} as |navbar|>
  <div class="navbar-header">
    {{#link-to "index" class="navbar-brand ml-3" }} {{svg-jar "turkana_logo_main"}}{{/link-to}}
  </div>
  <navbar.content>
  </navbar.content>
  {{#if this.session.isAuthenticated}}
    <Common::Profile-Icon @icon={{svg-jar "account_circle_white" }} @link="login" @class="rounded-pill" @text="logout" />
    {{#if this.currentUser.user}}
      <p>Signed in as {{this.currentUser.user.name}}</p>
    <Common::Profile-Icon @icon={{svg-jar "account_circle_white" }} @link="login" @class="rounded-pill" @text="Signed in as {{this.currentUser.user.name}}" />
    {{/if}}
  {{else}}
    <Common::Profile-Icon @icon={{svg-jar "account_circle_white" }} @link="login" @class="rounded-pill" @text="login" />
  {{/if}}
</BsNavbar>